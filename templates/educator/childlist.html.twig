{% else %}
   <img src="/images/male.png" width="30px"/>
{% endif %}</td>
        <td class="th" >{{a.dateOfBirth}}</td>
        <td class="th">{{a.emergencyContact}}</td>
        <td class="th">{{a.emergencyPhone}}</td>
        <td class="th"><form action="/educator/noteHistory">
