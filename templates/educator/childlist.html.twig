 <table class="admintable1">
        <tr><th class="th1">First Name</th><th class="th1" >Last Name</th><th class="th1" >Gender</th><th class="th1">Date Of Birth</th><th class="th1">EmerContactName</th><th class="th1">EmergencyPhone</th><th class="th1"> Note</th><th class="th1">Addtendance</th></tr>
